<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#CCFFFFFF"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/dangerScoreText"
            android:text="Danger Score: 0%"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- LIVE STATUS -->
        <TextView
            android:id="@+id/runStatusText"
            android:text="ðŸƒ Not running"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/screamStatusText"
            android:text="ðŸŽ¤ No scream"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/detectorDetails"
            android:text="Monitoring sensors..."
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnRed"
                android:text="RED"
                android:layout_weight="1"
                android:backgroundTint="#FF0000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnYellow"
                android:text="YELLOW"
                android:textColor="#000"
                android:layout_weight="1"
                android:backgroundTint="#FFEB3B"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnGreen"
                android:text="GREEN"
                android:layout_weight="1"
                android:backgroundTint="#4CAF50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <ToggleButton
            android:id="@+id/toggleNight"
            android:textOn="Night Mode ON"
            android:textOff="Assume Night"
            android:layout_marginTop="12dp"
            android:backgroundTint="#7C4DFF"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ToggleButton
            android:id="@+id/toggleScream"
            android:textOn="Assume Scream ON"
            android:textOff="Assume Scream"
            android:layout_marginTop="8dp"
            android:backgroundTint="#E53935"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- SOS OVERLAY -->
    <LinearLayout
        android:id="@+id/sosOverlay"
        android:background="#EEFF0000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="DANGER DETECTED!"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/countdownText"
            android:text="10"
            android:textColor="#FFFFFF"
            android:textSize="80sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnCancelSOS"
            android:text="I AM SAFE (CANCEL)"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>